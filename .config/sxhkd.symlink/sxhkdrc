#
# WM INDEPENDENT HOTKEYS
# ______________

# Program launcher
super + BackSpace
    $HOME/.bin/dmenu/dmenu-running-apps.sh

super + shift + BackSpace
    $HOME/.bin/dmenu/dmenu-recent.sh

super + alt + BackSpace
    rofi -show window

super + space
    $HOME/.bin/dmenu/dmenu-launch.sh

super + shift + space
    $HOME/.bin/dmenu/dmenu-file-manager.sh

ctrl + alt + Delete
#    $HOME/.bin/dmenu/dmenu-power.sh
    $HOME/.bin/dmenu/dmenu-power-gentoo.sh

super + alt + shift + BackSpace
    dmenu_run




# RUN APPLICATIONS
super + Return
    urxvt -name main

super + w
#    killall urxvt; \
    urxvt -name tmux -e tmux-utility2.sh

super + ctrl + w
    tmux kill-session -t bvanhai2

super + alt + w
#    killall urxvt; \
    urxvt -name tmux -e tmux-utility.sh

super + alt + ctrl + w
    tmux kill-session -t bvanhai

super + alt + w
    lxterminal

super + d
    subl

super + shift + d
    sudo subl

super + c
    urxvt -e nvim

super + e
    cd /home && urxvt -e ranger

super + shift + e
    cd /home && sudo urxvt -e ranger

super + alt + e
    pcmanfm

super + alt + shift + e
    sudo pcmanfm

super + q
#    google-chrome-stable
    chromium

super + alt + q
    firefox

super + a
    pkill ncmpcpp; \
    urxvt -name ncmpcpp -e ncmpcpp

super + shift + a
    $HOME/.bin/mpdToggle.sh

super + ctrl + a
    killall mpd

super + Delete
    pkill htop ; \
    urxvt -name htop -e htop

super + v
    pkill alsamixer; \
    urxvt -name alsamixer -e alsamixer

super + shift + v
    lxappearance

super + x
    transmission-gtk

super + shift + x
    gimp

super + z
    virtualbox

super + shift + z
    gksu 'sudo modprobe vboxdrv'

# Toggle panel
super + p
    nohup panel >/dev/null 2>&1; \
    $HOME/.config/bspwm/bspwmrc

# Caps Lock Indicator
Caps_Lock
    $HOME/.bin/panel/dzen2-caps-not

# Toggle trayer
super + shift + F5
    $HOME/.bin/trayerToggle.sh

# Show clock
super + F5
    $HOME/.bin/clockToggle.sh




#
# MEDIA KEYS
# ______________

# Volume Control
super + Down
    amixer set Master 5%- unmute; \
    $HOME/.bin/panel/dzen2-vol-not

super + Up
    amixer set Master 5%+ unmute; \
    $HOME/.bin/panel/dzen2-vol-not

XF86AudioLowerVolume
    amixer set Master 5%- unmute; \
    $HOME/.bin/panel/dzen2-vol-not

XF86AudioRaiseVolume
    amixer set Master 5%+ unmute; \
    $HOME/.bin/panel/dzen2-vol-not

XF86AudioMute
    amixer set Master toggle; \
#    amixer set Headphone toggle; \
#    amixer set Speaker+LO toggle; \
    $HOME/.bin/panel/dzen2-vol-mute-not

XF86AudioMicMute
    amixer set Master toggle; \
#    amixer set Headphone toggle; \
#    amixer set Speaker+LO toggle; \
    $HOME/.bin/panel/dzen2-vol-mute-not


# Touchpad Toggle
XF86TouchpadToggle
    synclient TouchpadOff=$(synclient -l | grep -c 'TouchpadOff.*=.*0')

shift + F12
    synclient TouchpadOff=$(synclient -l | grep -c 'TouchpadOff.*=.*0')


# Brightness Xkeys
XF86MonBrightnessDown
    xbacklight -dec 10%; \
    $HOME/.bin/panel/dzen2-blight-not

XF86MonBrightnessUp
    xbacklight -inc 10%; \
    $HOME/.bin/panel/dzen2-blight-not

super + Left
    xbacklight -dec 10%; \
    $HOME/.bin/panel/dzen2-blight-not

super + Right
    xbacklight -inc 10%; \
    $HOME/.bin/panel/dzen2-blight-not

XF86Battery
    xset dpms force off

super + XF86Battery
    xset dpms 0 0 0 && xset s off

super + shift + XF86Battery
    xset dpms 300 600 900

super + alt + XF86Battery
    xset dpms 3 6 9


# Take screenshot 
Print
    cd ~/.scrot/screenshot/; \
    scrot; \
    aplay ~/.scrot/sound/camera-shutter-click-01.wav

# Take screenshot window
shift + @Print
    cd ~/.scrot/screenshot/; \
    scrot -s; \
    aplay ~/.scrot/sound/camera-shutter-click-02.wav

# Take screenshot after 5 second
ctrl + Print
    cd ~/.scrot/screenshot/; \
    aplay ~/.scrot/sound/camera-focusing-02.wav; \
    scrot -d 1; \
    aplay ~/.scrot/sound/camera-shutter-click-01.wav


# Screen rotate
alt + F12
    xrandr --output LVDS1 --rotate normal
ctrl + F12
    xrandr --output LVDS1 --rotate right




#
# POWER KEYS
# ______________

# Suspend
XF86Sleep
    systemctl suspend

# Toggle auto suspend
shift + XF86Sleep
    $HOME/.bin/xautolockToggle.sh

# Reboot
alt + XF86Sleep
    systemctl reboot

# Poweroff
ctrl + XF86Sleep
    systemctl poweroff
