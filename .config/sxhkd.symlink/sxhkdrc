# ==============================================================================
# File:     ~/.config/sxhkd/sxhkdrc
# Author:   Hai Bui
# Source:   https://github.com/bvanhai/dotfiles
#
# Comment:  Simple X hotkey daemon
#
#           Run: `pkill -USR1 -x sxhkd` after modify this file           
# ==============================================================================




# Make .Xresources reload its configuration files:
super + F2
    xrdb -merge ~/.Xresources

# Kill all active background programs that started with user bvanhai
ctrl + shift + Escape
     killall -u bvanhai

# Logout user bvanhai
ctrl + shift + alt + Escape
#    killall -KILL -u bvanhai
    pkill -9 -u bvanhai




#
# BSPWM HOTKEYS
# ______________

# Quit bspwm
ctrl + Escape
    bspc quit

# Close and kill window
super + {_,shift + }Escape
    bspc node -{c,k}

# Refresh all windows
super + ctrl + alt + r
    xrefresh

# Alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# If the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Swap the current node and the biggest node
super + g
    bspc node -s biggest




#
# STATE/FLAGS
# ______________

# Set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set the node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

# Get all windows under the current desktop and then toggle floating/tiled
super + alt + t
    ws=$(bspc query --nodes --desktop); \
    while read l; do bspc node $l -t {floating,tiled}; done <<< $ws

# Rotate view of the current desktop
super + {_,shift + ,shift + alt + }r
    bspc node @/ -R {90,180,270}

# Balance tree
super + b
    bspc node @/ -B

# Undo balancing (equalize windows)
super + shift + b
    bspc node @/ -E 


#
# FOCUS/SWAP
# ______________

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {shift + comma,shift + period,comma,period}
    bspc node -f @{parent,brother,first,second}

# Circulate the leaves of the tree of the selected desktop
super + ctrl + {grave,Tab}
    bspc node @/ -C {backward,forward}

# Focus the next/previous node
super + shift + {grave,Tab}
    bspc node -f {prev,next}

# Switch windows sequentially (like an app/task switcher)
super + {grave,Tab}
    bspc node -f {prev,next}.local

# Focus the next/previous desktop
super + bracket{left,right}
    bspc desktop -f {prev,next}

# Focus the last node/desktop
super + alt + {grave,Tab}
    bspc {node,desktop} -f last

# Switches Window w/ Previous Window 
super + apostrophe
    bspc node -s last

# Focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# PRESELECT
# ______________

# Preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# MOVE/RESIZE
# ______________

# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#super + alt + {h,j,k,l}
#    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#super + alt + shift + {h,j,k,l}
#    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Move a floating window
super + alt + ctrl + {h,j,k,l}
    bspc node -v {-20 0,0 20,0 -20,20 0}




#
# ADD REMOVE GAPS/PADDING
# ______________

#ctrl + bracket{left,right}
#    bspc config -m focused window_gap {33,6}

ctrl + shift + bracket{left}
    bspc config right_padding 40;\
    bspc config left_padding 40 ;\
    bspc config top_padding 40 ;\
    bspc config bottom_padding 40

ctrl + shift + bracket{right}
    bspc config right_padding 0;\
    bspc config left_padding 0 ;\
    bspc config top_padding 25 ;\
    bspc config bottom_padding 0



